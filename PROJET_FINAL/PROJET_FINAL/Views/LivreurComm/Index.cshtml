@model IEnumerable<PROJET_FINAL.Commande>

<style>
    body {
        margin: 0;
        color: rgba(255,255,255,0.5);
        background: rgba(255,255,255,0.5);
        font-family: "Poppins",sans-serif;
    }

    *, :after, :before {
        box-sizing: border-box
    }

    .clearfix:after, .clearfix:before {
        content: '';
        display: table
    }

    .clearfix:after {
        clear: both;
        display: block
    }

    a {
        color: inherit;
        text-decoration: none
    }

    .comm-wrap {
        width: 100%;
        margin: 0 auto;
        max-width: 610px;
        position: relative;
        box-shadow: 0 12px 15px 0 rgba(0,0,0,.24),0 17px 50px 0 rgba(0,0,0,.19);
        padding: 5px;
        text-align: center;
        background: rgba(52,58,64,1);
        align-content: center;
    }
    .title {
        color : white;
    }
    .tbl-comm {
        margin: 0 auto;
    }
    .tbl-head {

    }
    .obj-wrap {
        border-radius: 25px;
        border: none;
        padding: 20px;
        background: rgb(128, 128, 128);
        box-shadow: 0 12px 15px 0 rgba(0,0,0,.24),0 17px 50px 0 rgba(0,0,0,.19);
    }
    .obj-wrap td:first-child {
        -moz-border-radius-topleft: 5px;
        -moz-border-radius-bottomleft: 5px;
        -webkit-border-top-left-radius: 5px;
        -webkit-border-bottom-left-radius: 5px;
    }

    .obj-wrap td:last-child {
        -moz-border-radius-topright: 5px;
        -moz-border-radius-bottomright: 5px;
        -webkit-border-top-right-radius: 5px;
        -webkit-border-bottom-right-radius: 5px;
    }
    .info-obj {
        padding:7px;
    }

    

    .hr {
        height: 2px;
        margin: 60px 0 50px 0;
        background: rgba(255,255,255,.2);
    }

    .foot-lnk {
        text-align: center;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <br />
    <div class="comm-wrap">
        <h4 class="title">Les commandes</h4>

        <table cellpadding="0" cellspacing="0" class="tbl-comm">
            <tr class="tbl-head">
                <th>Nom Client</th>
                <th>Information</th>
                <th>Date</th>
                <th>Adresse</th>
                <th>Code Postal</th>
            </tr>
            <tr><td><hr /></td></tr>
            
            @foreach (Commande commande in Model)
            {
                <tr class="obj-wrap" id="commande">
                    <td class="info-obj">@commande.Client.PrenomClient</td>
                    <td class="info-obj">@commande.InfosSup</td>
                    <td class="info-obj">@commande.DateComm</td>
                    <td class="info-obj">@commande.Adresse</td>
                    <td class="info-obj">@commande.CodePostal</td>
                    <td class="info-obj"><input class="pointer-arrow" value="Prendre" type="button" onclick="Prendre(@commande.IdCommande)"></td>
                    @if ((DateTime.Now - commande.DateComm).Value.TotalSeconds >= 15) { <td class="info-obj">!!!</td> }
                </tr>
                <tr><td><br /></td></tr>
            }
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    function Prendre(id) {
        var r = confirm("Voulez vous vraiment prendre en charge cette commande?");
        if (r == true) {
            window.location.assign("/LivreurComm/Assigner/" + id);
        }
    }
</script>

<style type="text/css">
    .pointer-arrow:hover {
        cursor: pointer;
    }
</style>

