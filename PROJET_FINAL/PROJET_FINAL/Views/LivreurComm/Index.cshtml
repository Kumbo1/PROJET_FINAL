@model IEnumerable<PROJET_FINAL.Commande>
@{
    ViewBag.Title = "Index";
}


<h2>Les criss de commande</h2>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>Des osti de commande</h4>
    <hr />
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Information</th>
            <th>Date</th>
            <th>Adresse</th>
            <th>Code Postal</th>
            <th>Associer</th>
        </tr>
        @foreach (Commande commande in Model)
        {
        <tr>
            <td>@commande.InfosSup</td>
            <td>@commande.DateComm</td>
            <td>@commande.Adresse</td>
            <td>@commande.CodePostal</td>
            <td><a class="pointer-arrow" onclick="AssocierLivreur(@commande.IdCommande)">Prendre</a></td>
        </tr>
        }
    </table>
</body>
</html>
<script>
    function AssocierLivreur(id) {
        var r = confirm("Voulez vous vraiment prendre en charge cette commande?");
        if (r == true) {
            window.location.assign("/LivreurComm/Assigner/" + id);
        }
    }
</script>

<style type="text/css">
    .pointer-arrow:hover {
        cursor: pointer;
    }
</style>

