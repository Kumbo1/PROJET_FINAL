@model PROJET_FINAL.Register
@{
    ViewBag.Title = "Register";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/CSS/Login.css" rel="stylesheet" id="bootstrap-css">
<script>
    $(function () {

        $('#login-client-link').click(function (e) {
            $("#login-client").delay(100).fadeIn(100);
            $("#login-livreur").fadeOut(100);
            $('#login-livreur-link').removeClass('active');
            $(this).addClass('active');
            e.preventDefault();
        });
        $('#login-livreur-link').click(function (e) {
            $("#login-livreur").delay(100).fadeIn(100);
            $("#login-client").fadeOut(100);
            $('#login-client-link').removeClass('active');
            $(this).addClass('active');
            e.preventDefault();
        });
    });
</script>




<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="login-client-link">Client</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="login-livreur-link">Livreur</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="login-client" style="display: block; text-align: center;">
                                @using (Html.BeginForm("RegisterClient", "Register", FormMethod.Post))
                                {
                                <table>
                                    <tr>
                                        <td>Nom d'identifiant </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Username)</td>
                                    </tr>
                                    <tr>
                                        <td>Mot de passe </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.MotDePasse)</td>
                                    </tr>
                                    <tr>
                                        <td>Confirmez le mot de passe </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.ConfirmMotDePasse)</td>
                                    </tr>
                                    <tr>
                                        <td>Prénom </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Prenom)</td>
                                    </tr>
                                    <tr>
                                        <td>Nom de famille </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Nom)</td>
                                    </tr>
                                    <tr>
                                        <td>Courriel </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Courriel)</td>
                                    </tr>
                                    <tr>
                                        <td>Adresse </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Adresse)</td>
                                    </tr>
                                    <tr>
                                        <td>Telephone</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Telephone)</td>
                                    </tr>
                                    <tr>
                                        <td>Code Postal </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.CodePostal)</td>
                                    </tr>
                                    <tr>
                                        <td>Ville </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.NomVille)</td>
                                    </tr>
                                    <tr>
                                        <td><br /><input type="submit" name="name" value="Register" /></td>
                                    </tr>
                                </table>
                                }
                            </div>
                            <div id="login-livreur" style="display: none; text-align: center;">
                                @using (Html.BeginForm("RegisterLivreur", "Register", FormMethod.Post))
    {
                                <table>
                                    <tr>
                                        <td>Nom d'identifiant </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Username)</td>
                                    </tr>
                                    <tr>
                                        <td>Mot de passe </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.MotDePasse)</td>
                                    </tr>
                                    <tr>
                                        <td>Confirmez le mot de passe </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.ConfirmMotDePasse)</td>
                                    </tr>
                                    <tr>
                                        <td>Prénom </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Prenom)</td>
                                    </tr>
                                    <tr>
                                        <td>Nom de famille </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Nom)</td>
                                    </tr>
                                    <tr>
                                        <td>Courriel </td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Courriel)</td>
                                    </tr>
                                    <tr>
                                        <td>Telephone</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.EditorFor(model => model.Telephone)</td>
                                    </tr>
                                    <tr>
                                        <td>18 ans + @Html.CheckBoxFor(model => model.EstMajeur)</td>
                                    </tr>
                                    <tr>
                                        <td><br /><input type="submit" name="name" value="Register" /></td>
                                    </tr>
                                </table>
}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
