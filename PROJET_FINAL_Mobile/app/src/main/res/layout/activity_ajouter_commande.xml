<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterCommandeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <EditText
            android:id="@+id/nomObjetServ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textShortMessage"
            android:text="Nom objet/service"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/prixObjetServ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Prix"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="76dp" />

        <EditText
            android:id="@+id/categorieObjetServ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textShortMessage"
            android:text="Categorie"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="138dp" />

        <EditText
            android:id="@+id/infoSupp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:text="Information SupplÃ©mentaire"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="204dp" />

        <EditText
            android:id="@+id/adresseLivraison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textShortMessage"
            android:text="Adresse livraison"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="267dp" />

        <EditText
            android:id="@+id/codePostale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:text="Code Postale" />

        <EditText
            android:id="@+id/villeLivraison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapSentences"
            android:text="Ville" />

        <CheckBox
            android:id="@+id/estMajeur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18 +" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/commanderBouton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Commander" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>