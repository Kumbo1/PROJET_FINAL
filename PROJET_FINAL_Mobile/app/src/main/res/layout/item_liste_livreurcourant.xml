<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:descendantFocusability="blocksDescendants"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:touchscreenBlocksFocus="false">

        <TextView
            android:id="@+id/itemLivreurCourant_Prenom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:selectAllOnFocus="false"
            android:text="TextView"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            tools:text="Prenom" />

        <TextView
            android:id="@+id/itemLivreurCourant_Nom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:selectAllOnFocus="false"
            android:text="Objet"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            tools:text="Nom" />

        <TextView
            android:id="@+id/itemLivreurCourant_InfosSup"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="8dp"
            android:selectAllOnFocus="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            tools:text="InfosSup" />

        <TextView
            android:id="@+id/itemLivreurCourant_Date"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:selectAllOnFocus="false"
            android:text="TextView"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            tools:text="Date" />


        <ImageButton
            android:id="@+id/Fermer_btn"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/racingflag"
            android:text="Fermer" />
    </LinearLayout>

</RelativeLayout>